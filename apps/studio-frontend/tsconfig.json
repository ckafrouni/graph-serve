{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["vite/client", "node"],
		"rootDirs": ["."],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@workspace/ui/*": ["../../packages/ui/src/*"]
		}
	},
	"references": [
		{
			"path": "../studio-server"
		}
	],
	"include": ["../../packages/ui/src/*", "src/*"]
}
